public class Inverso {
    public static int invertir(int n, int inverso) {
        if (n == 0) {
            return inverso;
        }
        int residuo = n % 10; 
        inverso = inverso * 10 + residuo;
        return invertir(n / 10, inverso);
    }

    public static void main(String[] args) {
        if (args.length != 1) {
            System.out.println("Uso: java Inverso <numero>");
            return;
        }

        try {
            int numero = Integer.parseInt(args[0]);
            if (numero < 0) {
                System.out.println("Debe ser un número natural >= 0");
                return;
            }
            int inverso = invertir(numero, 0);
            System.out.println(numero + " → " + inverso);
        } catch (NumberFormatException e) {
            System.out.println("Debe ingresar un número válido");
        }
    }
}
